<keymap version="1" name="wyne" parent="Mac OS X">
  <!-- Files -->
  <action id="CloseContent">
    <keyboard-shortcut first-keystroke="ctrl w" />
  </action>

  <!-- General -->
  <action id="GotoAction">
    <keyboard-shortcut first-keystroke="shift meta a" />
    <keyboard-shortcut first-keystroke="shift meta p" />
  </action>
  <action id="GotoFile">
    <keyboard-shortcut first-keystroke="shift meta n" />
    <keyboard-shortcut first-keystroke="shift meta o" />
  </action>

  <!-- Navigation -->
  <action id="FileStructurePopup">
    <keyboard-shortcut first-keystroke="meta o" />
  </action>

  <!-- Splits -->
  <action id="NextSplitter">
    <keyboard-shortcut first-keystroke="alt tab" />
    <keyboard-shortcut first-keystroke="meta close_bracket" />
  </action>
  <action id="PrevSplitter">
    <keyboard-shortcut first-keystroke="shift alt tab" />
    <keyboard-shortcut first-keystroke="meta open_bracket" />
  </action>
  <action id="SplitHorizontally">
    <keyboard-shortcut first-keystroke="meta quote" second-keystroke="meta s" />
  </action>
  <action id="SplitVertically">
    <keyboard-shortcut first-keystroke="meta quote" second-keystroke="meta v" />
  </action>

  <!-- Tabs -->
  <action id="NextTab">
    <keyboard-shortcut first-keystroke="shift meta close_bracket" />
  </action>
  <action id="PreviousTab">
    <keyboard-shortcut first-keystroke="shift meta open_bracket" />
  </action>

  <!-- Text -->
  <action id="SelectAllOccurrences">
    <keyboard-shortcut first-keystroke="ctrl meta g" />
    <keyboard-shortcut first-keystroke="shift meta d" />
  </action>
  <action id="SelectNextOccurrence">
    <keyboard-shortcut first-keystroke="ctrl g" />
    <keyboard-shortcut first-keystroke="meta d" />
  </action>

  <!-- Code Editing -->
  <action id="ShowBookmarks">
    <keyboard-shortcut first-keystroke="meta quote" second-keystroke="shift b" />
  </action>
  <action id="ShowErrorDescription">
    <keyboard-shortcut first-keystroke="meta i" />
  </action>

  <!-- Tools -->
  <action id="ChooseRunConfiguration">
    <keyboard-shortcut first-keystroke="shift meta r" />
  </action>
  <action id="ActivateTerminalToolWindow">
    <keyboard-shortcut first-keystroke="shift meta t" />
  </action>
  <action id="JscsFixAction">
    <keyboard-shortcut first-keystroke="shift meta j" />
  </action>

  <!-- Git -->
  <action id="Git.Branches">
    <keyboard-shortcut first-keystroke="meta quote" second-keystroke="meta quote" />
  </action>
  <action id="Vcs.Show.Local.Changes">
    <keyboard-shortcut first-keystroke="meta l" />
  </action>
  <action id="Vcs.ShowTabbedFileHistory">
    <keyboard-shortcut first-keystroke="meta quote" second-keystroke="h" />
  </action>

</keymap>

